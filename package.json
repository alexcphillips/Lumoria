{
  "name": "lumoria",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev:core": "tsx watch lumoria-core/src/main.ts",
    "dev:live": "tsx watch lumoria-live/src/main.ts",
    "dev": "concurrently -n Core,Live -c cyan,magenta \"npm run dev:core\" \"npm run dev:live\"",
    "build:core": "nest build --project lumoria-core",
    "build:live": "tsc -p lumoria-live/tsconfig.json",
    "build": "npm run build:core && npm run build:live",
    "test:core": "jest --config lumoria-core/jest.config.js --coverage",
    "test:live": "jest --config lumoria-live/jest.config.js --coverage",
    "test": "npm run test:core && npm run test:live",
    "lint": "eslint 'lumoria-core/**/*.ts' 'lumoria-live/**/*.ts' --fix",
    "format": "prettier --write 'lumoria-core/**/*.ts' 'lumoria-live/**/*.ts'"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fastify": "^5.5.0",
    "pg": "^8.16.3",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.16.5",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.0.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2"
  }
}
